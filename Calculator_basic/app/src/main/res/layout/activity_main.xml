<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.calculator_basic.MainActivity">

    <Button
        android:text="7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn9"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/btn7" />

    <Button
        android:text="/"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/btndiv" />

    <Button
        android:text="8"
        android:layout_width="70dp"
        android:id="@+id/btn8"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:text="6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_alignRight="@+id/btn9"
        android:layout_alignEnd="@+id/btn9"
        android:layout_marginTop="10dp"
        android:id="@+id/btn6" />

    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignLeft="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:id="@+id/btn5" />

    <Button
        android:text="4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:id="@+id/btn4" />

    <Button
        android:text="*"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn4"
        android:layout_alignLeft="@+id/btndiv"
        android:layout_alignStart="@+id/btndiv"
        android:id="@+id/btnmul" />

    <Button
        android:text="2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignLeft="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:id="@+id/btn2" />

    <Button
        android:text="+"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignLeft="@+id/btnmul"
        android:layout_alignStart="@+id/btnmul"
        android:id="@+id/btnadd" />

    <Button
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4" />

    <Button
        android:text="="
        android:layout_height="wrap_content"
        android:id="@+id/btnequal"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/btn0"
        android:layout_alignBottom="@+id/btn0"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />

    <Button
        android:text="-"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnsub"
        android:layout_alignBaseline="@+id/btnequal"
        android:layout_alignBottom="@+id/btnequal"
        android:layout_alignLeft="@+id/btnadd"
        android:layout_alignStart="@+id/btnadd" />

    <Button
        android:text="3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn6"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6"
        android:layout_marginTop="12dp" />

    <Button
        android:text="CLEAR"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnclear"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3" />

    <Button
        android:text="0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn0"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/btnresult"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_marginBottom="17dp"
        android:id="@+id/info" />

    <Button
        android:text="9"
        android:layout_height="wrap_content"
        android:id="@+id/btn9"
        android:layout_width="70dp"
        android:layout_marginBottom="128dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_above="@+id/btnclear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/btnresult"
        android:layout_above="@+id/btn7"
        android:layout_alignLeft="@+id/info"
        android:layout_alignStart="@+id/info"
        android:layout_height="40dp" />

</RelativeLayout>
